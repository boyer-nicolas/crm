<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ config.name }}
			-
			{{ title }}</title>
		{% block extra_stylesheets_before %}{% endblock %}
		{% block stylesheets %}
			{% include "components/styles.twig" %}
		{% endblock %}
		{% block extra_stylesheets_after %}{% endblock %}
	</head>

	<body class="{{ device }} {{ session.theme }}">
		{% block sidebar %}
			{% include "components/sidebar.twig" %}
		{% endblock %}

		{% block main %}
			<main class="main-wrapper active">
				{% block header %}
					{% include "components/header.twig" %}
				{% endblock %}
				<section class="page-content container-fluid">
					{% block content %}{% endblock %}
				</section>
			</main>
			<div class="loader">
				{% include "components/loader.twig" %}
			</div>
			{% block footer %}
				{% include "components/footer.twig" %}
			{% endblock %}
			{% block search %}
				{% include "components/search.twig" %}
			{% endblock %}
		{% endblock %}
		{% block extra_scripts_before %}{% endblock %}
		{% block scripts %}
			{% include "components/scripts.twig" %}
		{% endblock %}
		{% block extra_scripts_after %}{% endblock %}
	</body>
</html>
