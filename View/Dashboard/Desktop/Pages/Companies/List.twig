<div class="row">
    <div class="col-lg-12">
        <div class="card-style mb-30">
            <h6 class="mb-10">
                {{ title }}
            </h6>
            <p class="text-sm mb-20">
                Tous les sociétés enregistrées .
            </p>
            <div class="table-wrapper table-responsive pt-20">
                {% if companies is iterable %}
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    <h6>
                                        ID
                                    </h6>
                                </th>
                                <th>
                                    <h6>
                                        Nom
                                    </h6>
                                </th>
                                <th>
                                    <h6>
                                        Ville
                                    </h6>
                                </th>
                                <th>
                                    <h6>
                                        Pays
                                    </h6>
                                </th>
                                <th>
                                    <h6>
                                        Actions
                                    </h6>
                                </th>
                            </tr>
                            <!-- end table row -->
                        </thead>
                        <tbody>
                            {% for company in companies %}
                                <tr>
                                    <td class="min-width cursor-pointer">
                                        <div class="custom-control custom-checkbox cursor-pointer">
                                            <input class="form-check-input custom-control-input"
                                                type="checkbox"
                                                name="multi-select-{{
                                                customer.user_id
                                                }}"
                                                value="{{
                                                customer.user_id
                                                }}" />
                                            <label class="form-check-label"
                                                for="multi-select-{{
                                                customer.user_id
                                                }}">
                                                {{ customer.user_id }}
                                            </label>
                                        </div>
                                    </td>
                                    <td class="min-width">
                                        <p>
                                            {{ company.name }}
                                        </p>
                                    </td>
                                    <td class="min-width">
                                        <p>
                                            {{ company.city }}
                                        </p>
                                    </td>
                                    <td class="min-width">
                                        <p>
                                            {{ company.country }}
                                        </p>
                                    </td>
                                    {% include 'modules/tables/action.twig' with {
                                        id: company.id
                                    } %}
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p>
                        {{ companies }}
                    </p>
                {% endif %}
                <!-- end table -->
            </div>
        </div>
        <!-- end card -->
    </div>
    <!-- end col -->
</div>
<!-- end row -->
