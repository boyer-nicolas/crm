<div class="w-100 mb-3 d-flex justify-content-center">
	<button id="add-company-btn" class="main-btn primary-btn btn-hover btn-md">
		Ajouter une Nouvelle Société
	</button>
</div>

{% if companies is iterable %}
	{% for company in companies %}
		<div class="col-xl-3 col-lg-4 col-sm-6 card-nav-link">
			<div class="icon-card mb-20 flex-wrap mobile-table-card">
				<div class="d-flex justify-content-between align-items-center w-100">
					<h3 class="text-bold">
						{{ company.name }}
					</h3>
					<div class="custom-control custom-checkbox cursor-pointer">
						<input class="form-check-input custom-control-input" type="checkbox" name="multi-select-{{ company.user_id }}" value="{{ company.user_id }}"/>
						<label class="form-check-label" for="multi-select-{{ company.user_id }}"></label>
					</div>
				</div>
				<div class="content w-100 mt-3">
					<div class="row">
						<div class="col">
							<h6>
								Ville
							</h6>
						</div>
						<div class="col">
							<p>
								{{ company.city }}
							</p>
						</div>
					</div>
					<div class="row">
						<div class="col">
							<h6>
								Code Postal
							</h6>
						</div>
						<div class="col">
							<p>
								{{ company.zip }}
							</p>
						</div>
					</div>
					<div class="row">
						<div class="col">
							<h6>
								Pays
							</h6>
						</div>
						<div class="col">
							<p>
								{{ company.country }}
							</p>
						</div>
					</div>
				</div>
				{% include 'modules/tables/action.twig' %}
			</div>
			<!-- End Icon Cart -->
		</div>
	{% endfor %}
{% else %}
	<p>
		{{ companys }}
	</p>
{% endif %}

<div class="select-opts">
	<div class="row d-flex justify-content-center bg-white py-3 position-fixed bottom-0">
		<div class="col">
			<button class="btn primary-btn btn-md mx-2" id="multiple-delete-users">
				Supprimer
				<span id="users-to-delete"></span>
				Clients
			</button>
		</div>
	</div>
</div>
{% include 'modules/pagination.twig' %}
