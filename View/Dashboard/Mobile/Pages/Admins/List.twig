<div class="w-100 mb-3 d-flex justify-content-center">
	<button id="add-admin-btn" class="main-btn primary-btn btn-hover btn-md">
		Ajouter un Nouvel Admin
	</button>
</div>

{% if admins is iterable %}
	{% for admin in admins %}
		<div class="col-xl-3 col-lg-4 col-sm-6 card-nav-link">
			<div class="icon-card mb-20 flex-wrap mobile-table-card">
				<div class="d-flex justify-content-between align-items-center w-100">
					<div class="icon mr-0">
						<img width="25" height="25" src="{{ admin.avatar }}" alt=""/>
					</div>
					<h3 class="text-bold">
						{{ admin.first_name }}
						{{ admin.last_name }}
					</h3>
					<div class="custom-control custom-checkbox cursor-pointer">
						<input class="form-check-input custom-control-input" type="checkbox" name="multi-select-{{ admin.user_id }}" value="{{ admin.user_id }}"/>
						<label class="form-check-label" for="multi-select-{{ admin.user_id }}"></label>
					</div>
				</div>
				<div class="content w-100 mt-3">
					<div class="row">
						<div class="col">
							<h6>
								Email
							</h6>
						</div>
						<div class="col">
							<p>
								{{ admin.email }}
							</p>
						</div>
					</div>
					<div class="row">
						<div class="col">
							<h6>
								Téléphone
							</h6>
						</div>
						<div class="col">
							<p>
								{{ admin.phone }}
							</p>
						</div>
					</div>
					<div class="row">
						<div class="col">
							<h6>
								Société
							</h6>
						</div>
						<div class="col">
							<p>
								{{ admin.company }}
							</p>
						</div>
					</div>
				</div>
				{% include 'modules/tables/action.twig' %}
			</div>
		</div>
	{% endfor %}
{% else %}
	<p>
		{{ admins }}
	</p>
{% endif %}
{% include 'modules/pagination.twig' %}
